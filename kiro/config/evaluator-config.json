{
  "weights": {
    "test_coverage_delta": 0.3,
    "lint_score": 0.2,
    "security_scan_score": 0.2,
    "code_complexity_delta": 0.1,
    "ci_pipeline_status": 0.1,
    "review_feedback_score": 0.1
  },
  "thresholds": {
    "min_test_coverage": 0.8,
    "max_complexity_increase": 0.1,
    "critical_security_fail": 0,
    "lint_error_tolerance": 5
  },
  "providers": {
    "coverage": {
      "type": "jest",
      "config_path": "jest.config.js",
      "minimum_coverage": 80,
      "fallback_commands": [
        "npm run test:coverage",
        "pytest --cov",
        "go test -cover ./..."
      ]
    },
    "lint": {
      "type": "eslint",
      "config_path": ".eslintrc.js",
      "rulesets": ["recommended", "security"],
      "fallback_commands": [
        "npm run lint",
        "eslint .",
        "pylint **/*.py",
        "golint ./..."
      ]
    },
    "security": {
      "type": "snyk",
      "severity_threshold": "high",
      "fallback_commands": [
        "snyk test",
        "npm audit",
        "safety check",
        "gosec ./..."
      ]
    },
    "ci": {
      "type": "github-actions",
      "required_checks": ["test", "lint", "build"],
      "api_endpoint": "https://api.github.com"
    }
  },
  "scoring": {
    "perfect_score": 5.0,
    "failure_penalty": -2.0,
    "timeout_penalty": -1.0,
    "bonus_thresholds": {
      "exceptional_coverage": {
        "threshold": 0.95,
        "bonus": 0.5
      },
      "zero_security_issues": {
        "bonus": 0.3
      },
      "reduced_complexity": {
        "threshold": -0.1,
        "bonus": 0.4
      }
    }
  },
  "custom_evaluators": {
    "documentation": {
      "enabled": false,
      "weight": 0.0,
      "script": "custom_evaluators/documentation.py"
    },
    "performance": {
      "enabled": false,
      "weight": 0.0,
      "script": "custom_evaluators/performance.py"
    }
  }
}